{
  "name": "gauntlet",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "dependencies": {
    "@prisma/client": "^6.1.0"
  },
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @gauntlet/core build && pnpm --filter web dev",
    "dev:worker": "pnpm --filter @gauntlet/core build && pnpm --filter worker dev",
    "build": "pnpm -r build",
    "build:web": "pnpm prisma generate && pnpm --filter @gauntlet/core build && pnpm --filter web build",
    "build:worker": "pnpm --filter @gauntlet/core build && pnpm --filter worker build",
    "lint": "pnpm -r lint",
    "start:web": "pnpm --filter web start",
    "start:worker": "pnpm --filter worker start",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter web build && pnpm exec playwright test",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:deploy": "prisma migrate deploy",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "seed": "tsx scripts/seed.ts",
    "seed:challenge-metadata": "node scripts/seed-challenge-metadata.js",
    "create-challenge": "tsx scripts/create-challenge.ts",
    "render:deploy": "node scripts/render/deploy.mjs",
    "render:deploy:dry": "node scripts/render/deploy.mjs --dry-run",
    "render:migrate": "node scripts/render/migrate.mjs",
    "render:migrate:dry": "node scripts/render/migrate.mjs --dry-run",
    "render:pause": "node scripts/render/deploy.mjs --worker-enabled=false",
    "render:resume": "node scripts/render/deploy.mjs --worker-enabled=true --run-untrusted=true"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@playwright/test": "^1.49.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
